    <ul>
      <li><button id="nav-toggle">â˜° Menu</button></li>
    </ul>
  </nav>

  <div id="nav-overlay" class="hidden">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/bookreviews">Book Reviews</a></li>
    <% if (!user) { %>
        <li><a href="/auth/login">Login</a></li>
        <li><a href="/auth/register">Register</a></li> 
    <%}else { %>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/bookreviews/new">Create Review</a></li>
      <li><a href="/auth/log-out">Log out</a></li>
    <% } %>
    <li><a href="#" id="close-nav">X</a></li>
    </ul>
  </div>

  <script>

    document.addEventListener('DOMContentLoaded', () => {
      const toggleBtn = document.getElementById('nav-toggle');
      const navOverlay = document.getElementById('nav-overlay');
      const closeBtn = document.getElementById('close-nav'); 
  
      if (toggleBtn && navOverlay && closeBtn) {
        toggleBtn.addEventListener('click', () => {
          navOverlay.classList.remove('hidden');
          navOverlay.classList.add('visible');
          document.body.classList.add('nav-open'); 
        });
  
        closeBtn.addEventListener('click', () => {
          navOverlay.classList.remove('visible');
          navOverlay.classList.add('hidden');
          document.body.classList.remove('nav-open');
        });
      }
    });
  </script>
     