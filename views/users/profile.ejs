<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/nav.ejs') %>

    <main id="main-content">
      <h1>Welcome, <%= user.name %>'s profile!</h1>

      <p>You are in the book club: <strong><%= user.bookClub.name %></strong></p>

      <div class="profile-actions">
        <a href="/bookreviews/new" class="btn">Create Book Review</a>

        <form action="/invite" method="POST" style="margin-top: 1rem;">
          <label for="clubId">Invite to Book Club / Join by ID:</label>
          <input type="text" name="clubId" placeholder="Book Club ID">
          <button type="submit">Submit</button>
        </form>
      </div>

      <% if (userReviews && userReviews.length > 0) { %>
        <h2>Your Reviews</h2>
        <ul class="review-list">
          <% userReviews.forEach(review => { %>
            <li>
              <a href="/bookreviews/<%= review._id %>"><%= review.bookName %></a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No reviews yet. Get started by creating one!</p>
      <% } %>

      <footer style="margin-top: 2rem;">
        <a href="https://github.com/your-github-username" target="_blank">GitHub link</a>
      </footer>
    </main>
  </body>
</html>
